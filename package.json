{
  "name": "sanitizationjs",
  "version": "1.0.0",
  "description": "SanitizationJS - Request Sanitization & Response Normalization for NestJS and ExpressJS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./express": {
      "import": "./dist/express/index.js",
      "require": "./dist/express/index.js",
      "types": "./dist/express/index.d.ts"
    },
    "./nestjs": {
      "import": "./dist/nestjs/index.js",
      "require": "./dist/nestjs/index.js",
      "types": "./dist/nestjs/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "security:audit": "audit-ci --config audit-ci.json",
    "deps:check": "depcheck",
    "deps:update": "npm-check-updates",
    "deps:update:interactive": "npm-check-updates --interactive",
    "commit": "cz",
    "prepublishOnly": "npm run build && npm run test:ci",
    "prepack": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "nestjs",
    "express",
    "sanitization",
    "validation",
    "security",
    "normalization",
    "middleware",
    "typescript"
  ],
  "author": "Development Team",
  "license": "MIT",
  "peerDependencies": {
    "@nestjs/common": "^9.0.0 || ^10.0.0",
    "@nestjs/core": "^9.0.0 || ^10.0.0",
    "express": "^4.18.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dompurify": "^3.0.5",
    "jsdom": "^22.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/dompurify": "^3.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.4.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "audit-ci": "^7.1.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.45.0",
    "express": "^4.18.0",
    "husky": "^9.1.7",
    "jest": "^29.6.1",
    "lint-staged": "^16.1.5",
    "npm-check-updates": "^18.0.2",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.28.10",
    "typescript": "^5.1.6"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/sanitizationjs.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/sanitizationjs/issues"
  },
  "homepage": "https://github.com/your-org/sanitizationjs#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
